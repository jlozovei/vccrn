{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "test": {
      "inputs": ["src/**/*.js", "src/**/*.jsx", "test/**/*.json"]
    },
    "build": {
      "dependsOn": ["^test"],
      "outputs": ["dist/**"]
    },
    "deploy": {
      "dependsOn": ["lint", "test", "build"]
    }
  }
}