{
  "name": "vccrn",
  "version": "0.1.0",
  "description": "Vittude Code Challenge, React Native",
  "keywords": [],
  "main": "n/a",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{js,jsx,json}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "eslint": "^8.34.0",
    "husky": "^7.0.2",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.3",
    "prettier": "^2.4.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jlozovei/vccrn.git"
  },
  "author": "Julio Lozovei <jlozovei@gmail.com> (https://jlozovei.dev)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/jlozovei/vccrn/issues"
  },
  "homepage": ".",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json}": [
      "npm run format"
    ],
    "*.{js,jsx,json}": "eslint --cache --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
