{
  "name": "vccrn",
  "version": "0.1.0",
  "description": "Vittude Code Challenge, React Native",
  "keywords": [],
  "main": "n/a",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,json}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "husky": "^7.0.2",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.3",
    "prettier": "^2.4.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jlozovei/vccrn.git"
  },
  "author": "Julio Lozovei <jlozovei@gmail.com> (https://jlozovei.dev)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/jlozovei/vccrn/issues"
  },
  "homepage": ".",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/__mocks__/**/*.js",
      "<rootDir>/src/components/**/*.js",
      "<rootDir>/src/helpers/**/*.js"
    ],
    "globals": {
      "__PATH_PREFIX__": ""
    },
    "moduleNameMapper": {
      ".+\\.(css|styl|less|sass|scss)$": "identity-obj-proxy",
      ".+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/file-mock.js"
    },
    "modulePaths": [
      "<rootDir>",
      "<rootDir>/src/"
    ],
    "setupFiles": [
      "<rootDir>/loadershim.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setup-test-env.js"
    ],
    "testURL": "http://localhost",
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "node_modules",
      "\\.cache",
      "<rootDir>.*/public"
    ],
    "transform": {
      "^.+\\.js?$": "<rootDir>/jest-preprocess.js"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(gatsby)/)"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "lint-staged": {
    "src/**/*.{js,css}": [
      "npm run format"
    ],
    "*.js": "eslint --cache --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
